###### => main #####################################################################
function main() {
    [[ $EUID -eq 0 ]] && { error "Don't run as root"; exit 1; }
    log_start
    check_gum
    clear
    # gum style --foreground 1 "âœ… THIS IS JUST A TEST 1"
    # gum style --foreground 2 "âœ… THIS IS JUST A TEST 2"
    # gum style --foreground 3 "âœ… THIS IS JUST A TEST 3"
    # gum style --foreground 4 "âœ… THIS IS JUST A TEST 4"
    # gum style --foreground 5 "âœ… THIS IS JUST A TEST 5"
    # gum style --foreground 6 "âœ… THIS IS JUST A TEST 6"
    # gum style --foreground 7 "âœ… THIS IS JUST A TEST 7"
    # gum style --foreground 8 "âœ… THIS IS JUST A TEST 8"
    # gum style --foreground 9 "âœ… THIS IS JUST A TEST 9"
    # gum style --foreground 10 "âœ… THIS IS JUST A TEST 10"
    # gum style --foreground 11 "âœ… THIS IS JUST A TEST 11"
    # gum style --foreground 12 "âœ… THIS IS JUST A TEST 12"
    # gum style --foreground 13 "âœ… THIS IS JUST A TEST 13"
    # gum style --foreground 14 "âœ… THIS IS JUST A TEST 14"
    # gum style --foreground 15 "âœ… THIS IS JUST A TEST 15"
    # gum style --foreground 16 "âœ… THIS IS JUST A TEST 16"
    # gum style --foreground 17 "âœ… THIS IS JUST A TEST 17"
    # gum style --foreground 18 "âœ… THIS IS JUST A TEST 18"
    # gum style --foreground 19 "âœ… THIS IS JUST A TEST 19"
    # gum style --foreground 20 "âœ… THIS IS JUST A TEST 20"
    if command -v gum &>/dev/null; then
        gum style --bold --padding "0 2" --border double --border-foreground 12 "â˜• Cocoa system configuration script"
    else
    	echo -e "\e[36mâ˜• Cocoa system configuration script\e[0m"
    fi
    while true; do
	local choice=$(choose \
            "ðŸš€ Complete Installation (recommended)" \
            "ðŸ› ï¸ Enable rc.d-style configs for all shells" \
            "ðŸ”‘ SSH configuration" \
            "ðŸ“¤ Upload SSH key to GitHub" \
            "ðŸŒ± Git configuration" \
            "âš™ï¸ Arch tweaks" \
            "ðŸ–¥ï¸ CLI tools" \
